{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "backend/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/socket.io/(.*)",
      "dest": "/backend/index.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/index.ts"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/backend/index.ts"
    },
    {
      "src": "/((?!api/|uploads/|socket.io/).*)",
      "dest": "/$1"
    }
  ]
}